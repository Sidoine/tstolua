{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${workspaceRoot}/index.ts",
                "args": [
                    "-p",
                    "../tsaddon/tsconfig.json"
                ],
                "outFiles": [
                    "${workspaceRoot}/dist/**/*.js"
                ],
                "protocol": "inspector"
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Debug tests",
                "program": "${workspaceRoot}/node_modules/ava/profile.js",
                "args": ["${workspaceRoot}/dist/tests/luavisitor.spec.js"],
                "outFiles": [
                    "${workspaceRoot}/dist/**/*.js"
                ],
                "protocol": "inspector"
            },
        ]
    }